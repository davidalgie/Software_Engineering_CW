    private void jButtonCreateStudentActionPerformed(java.awt.event.ActionEvent evt) {                                                     
        //student student1 = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
        if(mainWindow.stuCount == mainWindow.studentList.length){
            JOptionPane.showMessageDialog(this, "Maximum number of students reached.");
        }
        else{
        String test = (String) jComboBoxSkills.getSelectedItem();
        System.out.println(test);
        System.out.println(mainWindow.studentList.length);
        mainWindow.studentList[mainWindow.stuCount] = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
        mainWindow.nameLabels[mainWindow.stuCount] = jTextFieldStudentName.getText();
        mainWindow.skillLabels[mainWindow.stuCount] = (String) jComboBoxSkills.getSelectedItem();
        if("Programming".equals((String) jComboBoxSkills.getSelectedItem())){
            mainWindow.programmerList[mainWindow.progCount] = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
            mainWindow.programmerNameList[mainWindow.progCount] = jTextFieldStudentName.getText();
            mainWindow.progCount++;
        }
        else if("Design".equals((String) jComboBoxSkills.getSelectedItem())){
            mainWindow.designerList[mainWindow.desiCount] = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
            mainWindow.designerNameList[mainWindow.desiCount] = jTextFieldStudentName.getText();
            mainWindow.desiCount++;
        }
        else if("Testing".equals((String) jComboBoxSkills.getSelectedItem())){
            mainWindow.testerList[mainWindow.testCount] = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
            mainWindow.testerNameList[mainWindow.testCount] = jTextFieldStudentName.getText();
            mainWindow.testCount++;
        }
        else if("Research".equals((String) jComboBoxSkills.getSelectedItem())){
            mainWindow.researcherList[mainWindow.reseCount] = new student(jTextFieldStudentName.getText(), (String) jComboBoxSkills.getSelectedItem());
            mainWindow.researcherNameList[mainWindow.reseCount] = jTextFieldStudentName.getText();
            mainWindow.reseCount++;
        }
        //mainWindow.name1.setText(mainWindow.studentList[i].getName());  
        //mainWindow.skill1.setText(mainWindow.studentList[i].getSkill()); 
        mainWindow.stuCount++;       
        mainWindow.refresh();
        }
    }                                                    

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
